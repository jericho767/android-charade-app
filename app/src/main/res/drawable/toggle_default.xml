<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorDefaultDark">

    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_checked="false">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/colorDefault" />
                        </shape>
                    </item>
                    <item android:left="-10dp" android:right="-10dp"
                        android:top="-10dp" android:bottom="2dp">
                        <shape>
                            <solid android:color="@android:color/transparent" />
                            <stroke android:width="2dp" android:color="@color/colorDefaultDark" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <item android:state_checked="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/colorDefault" />
                        </shape>
                    </item>
                    <item android:left="-10dp" android:right="-10dp"
                        android:top="-10dp" android:bottom="2dp">
                        <shape>
                            <solid android:color="@android:color/transparent" />
                            <stroke android:width="2dp" android:color="@color/colorAccent" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>