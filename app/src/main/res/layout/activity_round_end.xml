<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_action_bar"/>

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout android:id="@+id/round_word_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:baselineAligned="false"
            android:paddingTop="@dimen/dp_sm"
            android:paddingBottom="@dimen/dp_sm">

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_md">

                <TextView android:id="@+id/round_label_unchecked_words"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/dp_sm"
                    android:paddingEnd="@dimen/dp_sm"
                    android:text="@string/round_title_unchecked_words"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_md">

                <TextView android:id="@+id/round_label_checked_words"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_x4lg"
                    android:text="@string/round_title_checked_words"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/round_word_labels"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_md">

                <ListView android:id="@+id/round_unchecked_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_md">

                <ListView android:id="@+id/round_checked_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>